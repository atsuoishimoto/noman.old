      {% block css %}
        <link rel="stylesheet" href="/css/reset.css" />
        <link rel="stylesheet" href="/css/main.css" />
        <link rel="stylesheet" href="/css/search.css" />
      {% endblock %}

      {% block script %}
        <script src="./summary.js"></script>
