{% extends 'content.html.j2' %}

{% block css %}
  {{ super() }}
  <link rel="stylesheet" href="/css/index.css" />
  <link href="https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@500&display=swap" rel="stylesheet">

{% endblock %}

{% block title %}
  {{ lang }} index.html
{% endblock %}

{% block content %}
  <!-- Hero Section -->
  <section class="hero">
    <h1><span style="font-family: 'Orbitron';">Noman</span>
    <span style="font-style: italic; font-size: 0.9rem; font-weight:normal;">Man pages without the man</span></h1>
    <p 
    <p>{% trans %}AI-generated, human-friendly command documentation that's easy to understand{% endtrans %}</p>
    <div class="cta-buttons">
      <a href="#installation" class="cta-button">{% trans %}Get Started{% endtrans %}</a>
      <a href="https://github.com/atsuoishimoto/noman" class="cta-button secondary">View on GitHub</a>
    </div>

    <img src="/images/screenshot.{{ lang }}.png" width="80%" class="screenshot">
  </section>

  <!-- Quick Search -->
  <section class="search-container">
    <h2>{% trans %}Find a command{% endtrans %}</h2>
    <input id="searchbox-2" type="text" placeholder="{% trans %}Type a command name (e.g., ls, cd, grep)...{% endtrans %}" />
  </section>

  <!-- Features Section -->
  <section>
    <h2>{% trans %}Why noman?{% endtrans %}</h2>
    <div class="features">
      <div class="feature-card">
        <div class="feature-icon">🔍</div>
        <h3>{% trans %}Simplified Language{% endtrans %}</h3>
        <p>{% trans %}Minimal jargon and everyday terms, so you don't have to dig through long or confusing docs.{% endtrans %}</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon">⚡</div>
        <h3>{% trans %}Instant Access{% endtrans %}</h3>
        <p>{% trans %}Pre-generated pages load instantly, giving you immediate help without waiting for AI responses.{% endtrans %}</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon">📝</div>
        <h3>{% trans %}Practical Examples{% endtrans %}</h3>
        <p>{% trans %}Real-world use cases and common options that you'll actually use in day-to-day work.{% endtrans %}</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon">❓</div>
        <h3>{% trans %}FAQ Section{% endtrans %}</h3>
        <p>{% trans %}Frequently asked questions address common pitfalls and best practices for each command.{% endtrans %}</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon">🎯</div>
        <h3>{% trans %}Focused Content{% endtrans %}</h3>
        <p>{% trans %}Highlights the most common and practical use cases, avoiding overly technical details.{% endtrans %}</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon">✨</div>
        <h3>{% trans %}AI-Generated Help{% endtrans %}</h3>
        <p>{% trans %}Concise explanations and examples for Unix commands, generated by AI to be clear and reliable.{% endtrans %}</p>
      </div>
    </div>
  </section>


  <!-- Installation Section -->
  <section id="installation">
    <h2>{% trans %}Installation{% endtrans %}</h2>
    <p>{% trans %}Get started with noman in seconds:{% endtrans %}</p>
    <pre>pip install noman</pre>
  </section>

  <section id="usage">
    <h2>{% trans %}Usage{% endtrans %}</h2>
    <p>{% trans %}Use it just like you would use man:{% endtrans %}</p>
    <pre>noman ls</pre>
  </section>
{% endblock %}
